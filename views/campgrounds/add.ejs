<%- layout('layouts/boilerplate') %>

<form class="col-8 bs-validation" method="post" action="/campgrounds" novalidate>
    <div class="form-group mb-2">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="campground[name]" id="name" placeholder="Enter campground name" required>
      <div class="invalid-feedback">
        Please type a name.
      </div>
    </div>
    <div class="form-group mb-2">
      <label for="price">Price per night:</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">$</div>
        </div>
        <input type="number" class="form-control" name="campground[price]" id="price" aria-describedby="priceWarning" placeholder="Price" required>
      </div>
      <small id="priceWarning" class="form-text text-muted">Price can be set in range $1 - $100</small>
    </div>
    <div class="form-group mb-2">
        <label for="image">Image URL:</label>
        <input type="text" class="form-control" name="campground[image]" id="image" placeholder="Enter image URL" required>
        <div class="invalid-feedback">
            Image URL is required to display.
        </div>
      </div>
      <div class="form-group mb-2">
        <label for="location">Location:</label>
        <input type="text" class="form-control" name="campground[location]" id="location" placeholder="Enter location" required>
        <div class="invalid-feedback">
            Location is required to display.
        </div>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" name="campground[description]" id="description" placeholder="Enter description"></textarea>
      </div>
    
    <button type="submit" class="btn btn-success mt-3">Save changes</button>
</form>